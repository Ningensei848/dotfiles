# env variables --------------------------------------------------------------
export VOLTA_HOME="$HOME/.volta"

# PATH -----------------------------------------------------------------------
# --- rye
source "$HOME/.rye/env"

# --- volta
path+=("$VOLTA_HOME/bin")

# --- rust
path+=("$HOME/.cargo/env")

# --- chezmoi
path+=("$HOME/bin")


# Alias ----------------------------------------------------------------------
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
